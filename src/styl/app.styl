body, html {
	margin: 0;
	padding: 0;
}

.app {
	width: 100%;
	height: 100%;
	box-sizing: border-box;
}

.panel {
	width: 100%;
	height: 70px;
	background: #34495E;
	display: flex;
	align-items: center;
	box-sizing: border-box;
	padding: 0 30px;
	&--title {
		color: white;
		font-size: 40px;
		width: 100%;
		white-space: nowrap;
	}
	&--addLocal {
		color: white;
		font-size: 40px;
		margin-right: 20px;
		cursor: pointer;
		flex-shrink: 0;
	}
}

.cities {
	display: flex;
	flex-wrap: wrap;
	flex-direction: row;
	justify-content: center;
	padding: 20px;
}