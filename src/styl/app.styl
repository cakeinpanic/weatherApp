body, html {
	margin: 0;
	padding: 0;
}
Prettify
.app {
	width: 100%;
	height: 100%;
	box-sizing: border-box;
}

.panel {
	width: 100%;
	height: 70px;
	background: #34495E;
	display: flex;
	align-items: center;
	box-sizing: border-box;
	padding: 0 30px;
	&--title {
		color: white;
		font-size: 40px;
		width: 100%;
		white-space: nowrap;
	}
	&--addLocal {
		color: white;
		font-size: 40px;
		margin-right: 20px;
		cursor: pointer;
		flex-shrink: 0;
	}
	&--selector {
		width: 300px;
	}
}

.cities {
	display: flex;
	flex-wrap: wrap;
	flex-direction: row;
	justify-content: center;
	padding: 20px;
	width: 100%;
	box-sizing: border-box;
}

@media screen and (max-width: 450px) {
	.panel {
		flex-wrap: wrap;
		padding: 10px;
		justify-content: space-between;
		height: 110px;
		&--title {
			font-size: 30px;
			width: 60%;
			line-height: 1;
		}
		.panel--addLocal {
			text-align: right;
			width: 40%;
			margin-right: 0;
			.btn {
				.btn--text {
					display: none;
				}
			}
		}
		.panel--selector {
			width: 100%;
			padding-top: 15px;
		}
	}

	.cities {
		flex-direction: column;
	}

}