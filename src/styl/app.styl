body, html {
	margin: 0;
	padding: 0;
}

.app {
	width: 100%;
	height: 100%;
	box-sizing: border-box;
}

.panel {
	width: 100%;
	height: 70px;
	background: #34495E;
	display: flex;
	align-content: space-between;
	box-sizing: border-box;
	padding: 0 30px;
	&--title {
		color: white;
		font-size: 40px;
		width: 100%;
		align-self: center;
		white-space: nowrap;
	}
	&--selector {
		align-self: center;
	}
}

.cities {
	display: flex;
	flex-wrap: wrap;
	flex-direction: row;
	justify-content: center;
	padding: 20px;
}